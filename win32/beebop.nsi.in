; Include Modern UI
!include "MUI2.nsh"

; Package information (taken from configure)
!define PACKAGE_NAME "@PACKAGE_NAME@"
!define PACKAGE_TARNAME "@PACKAGE_TARNAME@"
!define PACKAGE_VERSION "@PACKAGE_VERSION@"

Name "${PACKAGE_NAME} ${PACKAGE_VERSION}"
OutFile "${PACKAGE_TARNAME}-${PACKAGE_VERSION}.exe"

; Run the installer with admin priviledges
RequestExecutionLevel admin

; Set default installation directory
InstallDir "$PROGRAMFILES\${PACKAGE_NAME}"

; Installer language
!insertmacro MUI_LANGUAGE "English"

; Pages
!insertmacro MUI_PAGE_DIRECTORY
!insertmacro MUI_PAGE_INSTFILES
!insertmacro MUI_UNPAGE_CONFIRM
!insertmacro MUI_UNPAGE_INSTFILES

; Install section
Section "Install"

	; Install program and icon
	SetOutPath "$INSTDIR"
	File "beebop.exe"
	File "beebop.ico"

	; Install data files
	SetOutPath "$INSTDIR\share"
	File /r "share\*.*"

	; Create menu shortcuts
	SetOutPath "$INSTDIR"
	CreateDirectory "$SMPROGRAMS\Beebop"
	CreateShortcut "$SMPROGRAMS\Beebop\Beebop.lnk" \
	               "$INSTDIR\beebop.exe" "" \
	               "$INSTDIR\beebop.ico"
	CreateShortcut "$SMPROGRAMS\Beebop\Uninstall Beebop.lnk" \
	               "$INSTDIR\uninstall.exe"

	; Create uninstaller
	WriteUninstaller "$INSTDIR\uninstall.exe"

SectionEnd

; Uninstall section
Section "Uninstall"

	; Delete menu shortcuts
	RMDir /r "$SMPROGRAMS\Beebop"

	; Delete installation directory
	RMDir /r "$INSTDIR"

SectionEnd
